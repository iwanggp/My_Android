<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.zerone.wgp.activities">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HandlerThreadDemo"
            android:configChanges="keyboardHidden|orientation|screenSize">
            //主要是防止屏幕旋转调用生命周期的
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.zerone.wgp.activities.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/files"/>
        </provider>

        <!-- <activity android:name=".HandlerDemoActivity"> -->
        <!-- </activity> -->
        <!-- <activity android:name=".HandlerThreadDemo"> -->
        <!-- </activity> -->
        <!--<activity android:name=".HandlerDemo">-->
        <!--</activity>-->
    </application>

</manifest>